            border-radius: 6px;
            border-width: 1px;
            border-color: rgba(255, 255, 255, 0.1);
            
            BetSlider {
                x: 6px;
                y: 4px;
                width: parent.width - 12px;
                height: 28px;
                value: bet_amount;
                min: min_bet;
                max: max_bet;
                label: "Bet";
            }
            
            Rectangle {
                x: 4px;
                y: 36px;
                width: parent.width - 8px;
                height: 32px;
                
                ActionButton {
                    text: "Fold";
                    bg_color: #aa4444;
                    enabled: can_fold;
                    x: 0;
                    y: 0;
                    width: min(parent.width * 0.22, 58px);
                    height: 30px;
                }
                ActionButton {
                    text: "Check";
                    bg_color: #4a7fa5;
                    enabled: can_check;
                    x: min(parent.width * 0.24, 64px);
                    y: 0;
                    width: min(parent.width * 0.22, 58px);
                    height: 30px;
                }
                ActionButton {
                    text: "Call " + call_amount;
                    bg_color: #4a9a5a;
                    enabled: can_call;
                    x: min(parent.width * 0.48, 126px);
                    y: 0;
                    width: min(parent.width * 0.24, 64px);
                    height: 30px;
                }
                ActionButton {
                    text: "Raise";
                    bg_color: #9a7a4a;
                    enabled: can_raise;
                    x: min(parent.width * 0.74, 194px);
                    y: 0;
                    width: min(parent.width * 0.24, 64px);
                    height: 30px;
                }
            }
        }
        
        PlayerAreaCompact {
            name: player1_name;
            chips: player1_chips;
            current_bet: p1_current_bet;
            hole_card1: p1_card1;
            hole_card2: p1_card2;
            hole_card1_red: p1_card1_red;
            hole_card2_red: p1_card2_red;
            is_acting: p1_acting;
            is_folded: p1_folded;
            is_dealer: dealer_position == 0;
            x: (parent.width - min(parent.width * 0.44, 125px)) / 2;
            y: parent.height * 0.84;
            width: min(parent.width * 0.44, 125px);
            height: min(parent.height * 0.15, 72px);
        }
    }
}
